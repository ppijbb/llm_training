{
    "train_batch_size": "auto",
    "train_micro_batch_size_per_gpu": "auto",
    "gradient_accumulation_steps": "auto",
    "gradient_clipping": "auto",
    "steps_per_print": 10,
    "wall_clock_breakdown": false,
    "communication_data_type": "bf16",
    "data_types": {
        "grad_accum_dtype": "bf16"
    },
    "pipeline_parallelism": {
        "enabled": true,
        "partition_method": "type:transformer",
        "num_partitions": 2
    },
    "tensor_parallelism": {
        "autotp_size": 2
    },
    "sequence_parallel_size": 1,
    "moe": {
        "num_experts": 32,
        "ep_size": 2,
        "k": 4,
        "capacity_factor": 1.0,
        "eval_capacity_factor": 1.0,
        "min_capacity": 4,
        "use_residual": false,
        "noisy_gate_policy": "None",
        "drop_tokens": true,
        "enable_expert_tensor_parallelism": true
    },
    "fp16": {
        "enabled": false,
        "auto_cast": false,
        "loss_scale": 0,
        "initial_scale_power": 16,
        "loss_scale_window": 1000,
        "hysteresis": 2,
        "consecutive_hysteresis": false,
        "min_loss_scale": 1
    },
    "bf16": {
        "enabled": true
    },
    "optimizer": {
        "type": "AdamW",
        "params": {
            "lr": "auto",
            "weight_decay": "auto"
        }
    },
    "sparse_attention": {
        "mode": "fixed",
        "block": 16,
        "different_layout_per_head": true,
        "num_local_blocks": 4,
        "num_global_blocks": 1,
        "attention": "bidirectional",
        "horizontal_global_attention": false,
        "num_different_global_patterns": 4,
        "num_random_blocks": 0, 
        "local_window_blocks": [4],
        "global_block_indices": [0],
        "global_block_end_indices": null,
        "num_sliding_window_blocks": 3
    },
    "scheduler": {
        "type": "OneCycle",
        "params": {
            "cycle_first_step_size": 2000,
            "cycle_first_stair_count": 500,
            "cycle_second_step_size": 3000,
            "cycle_second_stair_count": 100,
            "decay_step_size": 1000,
            "cycle_min_lr": 7e-6,
            "cycle_max_lr": 1e-4,
            "decay_lr_rate": 0.001,
            "cycle_min_mom": 0.85,
            "cycle_max_mom": 0.99,
            "decay_mom_rate": 0.0
        }
    },
    "activation_checkpointing": {
        "partition_activations": true,
        "cpu_checkpointing": true,
        "contiguous_memory_optimization": true,
        "synchronize_checkpoint_boundary": false
   },
    "zero_optimization": {
        "stage": 3,
        "offload_optimizer": {
            "device": "cpu",
            "nvme_path": "/mls/conan/offload",
            "pin_memory": true
        },
        "offload_param": {
            "device": "cpu",
            "nvme_path": "/mls/conan/offload",
            "buffer_count": 10,
            "pin_memory": false,
            "buffer_size": 5e9
        },
        "zero_quantized_weights": false,
        "zero_quantized_gradients": false,
        "zero_quantized_nontrainable_weights": false,
        "pipeline_loading_checkpoint": false,
        "zero_hpz_partition_size": 1,
        "overlap_comm": true,
        "contiguous_gradients": true,
        "allgather_partitions": false,
        "reduce_scatter": true,
        "sub_group_size": 1e6,
        "reduce_bucket_size": 1e8,
        "allgather_bucket_size": 1e8,
        "stage3_param_persistence_threshold": 1e6,
        "stage3_max_live_parameters": 1e9,
        "stage3_max_reuse_distance": 1e8,
        "stage3_prefetch_bucket_size": 1e7,
        "stage3_gather_16bit_weights_on_model_save": true
    },
    "aio": {
        "block_size": 1048576,
        "queue_depth": 32,
        "thread_count": 4,
        "single_submit": false,
        "overlap_events": true
    },
    "curriculum_learning": {
        "enabled": true,
        "curriculum_type": "seqlen",
        "min_difficulty": 65536,
        "max_difficulty": 128000,
        "schedule_type": "fixed_linear",
        "curriculum_autoresume": true,
        "schedule_config": {
          "total_curriculum_step": 32,
          "difficulty_step": 8
        }
    },
    "comms_logger": {
        "enabled": true,
        "verbose": false,
        "prof_all": false,
        "debug": false
    },
    "flops_profiler": {
        "enabled": true,
        "profile_step": 1,
        "module_depth": -1,
        "top_modules": 3,
        "detailed": true,
        "output_file": "/mls/conan/flops_profiler.txt"
    },
    "wandb": {
        "enabled": true,
        "project": "g3moe-sft",
        "group": null,
        "team": "kevintb"
    }
} 