        "leaf_module": {
            "classes": [
                "SPECTRADecoderLayer",
                "Qwen2DecoderLayer",
                "Qwen2VLDecoderLayer",
                "Qwen3VLMoeTextDecoderLayer",
                "Qwen3VLMoeTextSparseMoeBlock",
                "SiglipVisionModel",
                "SiglipVisionTransformer",
                "Siglip2VisionModel",
                "Qwen3VLVisionModel",
                "Qwen3VLMoeVisionModel"
            ],
            "names": [],
            "name_suffixes": []
        }
    },
    "prescale_gradients": false,
    "sparse_gradients": true,
    "scheduler": {
        "type": "WarmupDecayLR",
        "params": {
            "last_batch_iteration": -1,
            "total_num_steps": "auto",
            "warmup_min_lr": "auto",
            "warmup_max_lr": "auto",
            "warmup_num_steps": "auto"
