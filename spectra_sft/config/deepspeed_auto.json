{
    "fp16": {
        "enabled": false,
        "loss_scale": 0,
        "loss_scale_window": 1000,
        "initial_scale_power": 16,
        "hysteresis": 2,
        "min_loss_scale": 1
    },
    "bf16": {
        "enabled": true
    },
    "zero_allow_untested_optimizer": true,
    "optimizer": {
        "type": "AdamW",
        "params": {
            "lr": "auto",
